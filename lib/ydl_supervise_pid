#! /usr/bin/env sh

ydl_cleanup_pid(){
    rm -f stop *.pid
}

ydl_find_pid(){
    if [ $(ps aux | grep "$(cat *.pid)") ]; then
        true
    fi
}

ydl_kill_pid(){
    kill "$(cat *.pid)"
    ydl_cleanup_pid
}

ydl_watch_pid(){
    if [ -f *.pid ]; then
        while [ ydl_find_pid ]; do
            if [ "$(cat stop)" = "y" ]; then
                ydl_kill_pid
            else
                sleep 5
            fi
        done
        ydl_cleanup_pid
    fi
}

ydl_watch_pid
